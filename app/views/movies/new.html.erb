
<h1>Create Movie</h1>

<%=form_with(model: @movie) do |f| %>     
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :release_on %>
  <%= f.date_select :release_on %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>
  <%= f.label :director %>
  <%= f.text_field :director %>
  
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  
  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>

  <%= f.submit %>
<% end %>